<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NumPadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black_700"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sinBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="sin"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/cosBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="cos"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/tanBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="tan"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/cotBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            android:text="cot"
            android:textColor="@color/orange"
            android:textSize="20sp" />

        <Button
            android:id="@+id/squareBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="x^2"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/black_700"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black_700"
        android:orientation="horizontal">

        <Button
            android:id="@+id/allClearBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="24sp"
            android:textColor="@color/orange"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/leftBrBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="("
            android:textSize="24sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/black_700"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/rightBrBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            android:text=")"
            android:textColor="@color/orange"
            android:textSize="24sp"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/mulBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x"
            android:textSize="24sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/xyBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            android:text="X^Y"
            android:textColor="@color/orange"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black_700"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sevenBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/eightBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/nineBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/delBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="÷"
            android:textSize="34sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/black_700"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/lnBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="ln"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/black_700"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black_700"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/fourBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/fiveBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/sixBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/minusBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="45sp"
            android:textColor="@color/orange"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700" />

        <Button
            android:id="@+id/sqrtBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            android:text="√"
            android:textColor="@color/orange"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black_700"
        android:orientation="horizontal">
        <Button
            android:id="@+id/oneBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/twoBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/threeBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/plusBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="34sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/black_700"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/factBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="!"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/black_700"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black_700"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/userModeBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="U"
            android:textSize="24sp"
            android:textColor="@color/red"
            android:backgroundTint="@color/black_700"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/zeroBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/dotBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="."
            android:gravity="center_horizontal"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="@color/black_700"
            tools:ignore="NestedWeights"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/equalBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="gravity"
            android:text="="
            android:textSize="34sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>

