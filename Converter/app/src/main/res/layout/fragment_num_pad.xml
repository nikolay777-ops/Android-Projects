<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_num_pad"
    android:background="@color/colorblack"
    tools:context=".NumPadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <Button
                android:id="@+id/btnDel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="Del"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
            <Button
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="C"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="7"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="8"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="9"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="4"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="5"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="6"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="1"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="2"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="3"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <Button
                android:id="@+id/btn00"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="00"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="0"
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
            <Button
                android:id="@+id/btnDot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:text="."
                android:textSize="24dp"
                android:stateListAnimator="@null"
                android:background="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
